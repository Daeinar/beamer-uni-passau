\mode<presentation>

% color definitions
\definecolor{uiyellow}{RGB}{245,150,0}
\definecolor{uigrey}{RGB}{145,145,145}

% footer colors
\setbeamercolor{ruler in footer}{fg=uigrey,bg=white}
\setbeamercolor{title in footer}{fg=uigrey,bg=white}
\setbeamercolor{author in footer}{fg=uigrey,bg=white}
\setbeamercolor{pagenumber in footer}{fg=uigrey,bg=white}

% define footer design
\defbeamertemplate*{footline}{unipassautheme}%
{%
  \hbox{%
  \begin{beamercolorbox}[wd=.40\paperwidth,ht=2.25ex,dp=2ex,center]{title in footer}%
    {\scriptsize \insertshorttitle}%
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.40\paperwidth,ht=2.25ex,dp=2ex,center]{author in footer}%
    {\scriptsize \insertshortauthor}%
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.20\paperwidth,ht=2.25ex,dp=2ex,center]{pagenumber in footer}%
    {\scriptsize \insertframenumber{} / \inserttotalframenumber\hspace*{2ex}}%
  \end{beamercolorbox}}%
}%

\mode
<all>
